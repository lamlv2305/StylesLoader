{
    "color": {
        "$whiteSmoke" : "#0000ffff",
        "$blue": "#ffff00ff"
    },
    "font": {
        "@palatino": "Palatino"
    },
    "customVariables": {
        "~alignCenter": 1,
        "~alignLeft": 0
    },
    "styles": {
        ".banner": {
            "backgroundColor" : "$blue",
            "borderWidth": 1,
            "borderColor" : "$whiteSmoke",
            "cornerRadius" : 2
        },
        ".h1": {
            "parent": ".banner",
            "lineHeight": 40,
            "textColor": "$whiteSmoke",
            "textAlign": "~alignCenter",
            "fontSize": 18,
            "fontName": "@palatino",
            "shadowOpacity": 0.8,
            "shadowRadius": 10,
            "shadowOffset": "{0, 10}"
        }
    }
}
