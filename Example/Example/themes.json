{
    "color": {
        "$whiteSmoke" : "#0000ffff",
        "$blue": "#ffff00ff"
    },
    "font": {
        "@palatino": "Palatino"
    },
    "customVariables": {
        "~alignCenter": 1,
        "~alignLeft": 0
    },
    "styles": {
        ".banner": {
            "backgroundColor" : "$blue",
            "borderWidth": 5,
            "borderColor" : "$whiteSmoke",
            "cornerRadius" : 10
        },
        ".h1": {
            "parent": ".banner",
            "textColor": "$whiteSmoke",
            "textAlign": "~alignCenter",
            "fontSize": 18,
            "fontName": "@palatino"
        }
    }
}
